<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".intro.PresentationActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layer_drawables" />

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/circle_indicator_view"
        android:layout_above="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_lateral_slide"
        android:foregroundGravity="center_horizontal"
        app:strokeColor="@color/colorPrimary"
        app:fillColor="@color/colorPrimary"
        app:pageColor="@android:color/white"
        app:radius="6dp"
        app:strokeWidth="1.5dp"
        android:padding="5dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="@dimen/width_button"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_lateral_slide"
        android:alpha="0.2"
        android:background="@color/colorButton"
        android:clickable="false"
        android:enabled="false"
        android:text="@string/get_started_button"
        android:textColor="@android:color/white" />


</RelativeLayout>

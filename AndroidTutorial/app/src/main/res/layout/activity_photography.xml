<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPhotographyBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_container"
        android:layout_width="180dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/drawable_white_background"
        android:padding="2dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/ic_tapes" />


    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPhotographyOverlay" />

    <ImageButton
        android:id="@+id/take_picture_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_camera_button" />

</RelativeLayout>
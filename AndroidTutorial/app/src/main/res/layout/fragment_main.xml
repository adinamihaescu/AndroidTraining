<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/section_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_image"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/title_size"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/section_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_slide" />

    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/section_title"
        android:layout_marginEnd="@dimen/margin_lateral_slide"
        android:layout_marginStart="@dimen/margin_lateral_slide"
        android:layout_marginTop="@dimen/margin_top_slide"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/section_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_view"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/message_size"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/margin_lateral_slide"
        android:layout_marginStart="@dimen/margin_lateral_slide"
        android:layout_marginTop="@dimen/margin_top_slide"
        android:gravity="center" />


</RelativeLayout>
